{
  "name": "onetrainer-web",
  "version": "0.1.0",
  "description": "Web-based interface for OneTrainer",
  "type": "module",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "tsc -p tsconfig.main.json && concurrently -k --names \"vite,electron\" -c \"cyan,green\" \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:electron": "tsc -p tsconfig.main.json && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "preview": "vite preview",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "extends": null
  },
  "dependencies": {
    "immer": "^10.1.1",
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recharts": "^2.15.3",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/vite": "^4.2.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.1.2",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^9.27.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^28.1.0",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^7.3.1",
    "vitest": "^3.2.1",
    "wait-on": "^8.0.3"
  }
}
